{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "types" : ["node"],
    "rootDirs": [
      "src",
      "generated"
    ],
    "paths": {
      "*": [
        "src/types/*",
        "generated/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "examples/**/*"
  ]
}
